<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gimbal.android.skccJeju.MainActivity">
    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:onClick="onStartBtnClick" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_dongmoon"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="440dp">

            <ImageView
                android:id="@+id/img01"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dm1" />

            <ImageView
                android:id="@+id/img02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dm2" />

            <ImageView
                android:id="@+id/img03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dm3" />

        </ViewFlipper>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="0dp"
            android:background="#00000000"
            android:onClick="onStartJejuClick"
            android:singleLine="false"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>
