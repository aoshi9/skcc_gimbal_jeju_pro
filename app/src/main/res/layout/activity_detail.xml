<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fo="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_detail"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/titleImg"
            android:background="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/detail1" />

        <com.gimbal.android.skccJeju.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text="상품명         가격         이벤트  "
            android:textColor="#212121"
            android:textSize="20sp"
            foo:customFont="BMJUA_ttf.ttf" />

        <ListView
            android:id="@+id/listView1"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="25dp"
            android:choiceMode="multipleChoice" />

        <com.gimbal.android.skccJeju.TextViewPlus
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text="오시는길"
            android:textColor="#212121"
            android:textSize="20sp"
            foo:customFont="BMJUA_ttf.ttf" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/eventImg"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:visibility="visible" />
        </FrameLayout>

    </LinearLayout>
</TableLayout>



